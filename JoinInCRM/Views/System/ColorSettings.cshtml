
@{
    ViewBag.Title = "颜色管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var icout = 0;
    var currentColorType = "";
    var oldColorType = "";
}
<div class="weui-panel__bd" id="listbox">
    <img class="weui-media-box__thumb" style="width:100%;height:60px" src="~/Content/WeUI/images/color.jpg" alt="" />


    @foreach (var item in ViewBag.ColorList)
    {
        if (icout == 0)
        {
            <div class="weui-cells__title">
                @item.ColorType
                <a href="@Url.Action("AddColor","System")" class=" pull-right" data-target="#full">
                    <i class="icon icon-add3" style="color:cadetblue;  margin-top:-0.9rem;"></i>
                </a>
            </div>

                <div class="weui-cells" style="margin-bottom:0;margin-top:0;">
                    <a class="weui-cell weui-cell_access" href="@Url.Action("EditColor","System",new {ColorID=item.ColorID})">
                        <div class="item-media"><span style="background-color:@item.ColorCode;width:90px;">&nbsp;&nbsp;&nbsp;&nbsp;</span></div>&nbsp;
                        <div class="weui-cell__bd">
                            <p>@item.ColorName</p>
                        </div>
                        <div class="weui-cell__ft" style="font-size:small">@item.ColorStatus</div>
                    </a>
                </div>
            icout++;
            currentColorType = item.ColorType;
            oldColorType = item.ColorType;
        }
        else
        {
            currentColorType = item.ColorType;
            if (currentColorType == oldColorType)
            {

            }
            else
            {
                <div class="weui-cells__title">@item.ColorType </div>
                oldColorType = currentColorType;
            }
            <div class="weui-cells" style="margin-bottom:0;margin-top:0;">
                <a class="weui-cell weui-cell_access" href="@Url.Action("EditColor","System",new {ColorID=item.ColorID})">
                    <div class="item-media"><span style="background-color:@item.ColorCode;width:90px;">&nbsp;&nbsp;&nbsp;&nbsp;</span></div>&nbsp;
                    <div class="weui-cell__bd">
                        <p>@item.ColorName</p>
                    </div>
                    <div class="weui-cell__ft" style="font-size:small">@item.ColorStatus</div>
                </a>
            </div>

        }

    }

    @if (icout == 0)
    {
        <div class="weui-cells__title" style="color:#0094ff;font-style:italic">
            尚未录入颜色资料，请录入!
            <a href="@Url.Action("AddColor","System")" class=" pull-right" data-target="#full">
                <i class="icon icon-add3" style="color:cadetblue;  margin-top:-0.4rem;"></i>
            </a>
        </div>
    }


