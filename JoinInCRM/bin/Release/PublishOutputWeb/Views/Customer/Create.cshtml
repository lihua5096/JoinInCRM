@model JoinInCRM.Models.Customer

@{
    Layout = null;  
    ViewBag.Title = "新增客户";
    var apiUrl = Url.RouteUrl(
        "DefaultApi",
        new { httproute = "AddNew", controller = "Customer", action = "AddNew" }
    );
}
 
 
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="applicable-device" content="mobile">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <meta http-equiv="Cache-Control" content="no-transform" />
    <title>JoinIn CRM,Join In Success!</title>
    <meta name="keywords" content="广告关键词" />
    <meta name="description" content="广告关键描述" />

    <link href="~/Content/WeUI/css/weui.min.css" rel="stylesheet" />
    <link href="~/Content/WeUI/css/jquery-weui.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/FoxUI/fonts/iconfont.css" rel="stylesheet" />
    @*<link href="~/Content/FoxUI/css/foxui.css" rel="stylesheet" />*@
 

    <script src="~/Content/WeUI/js/jquery-2.1.4.js"></script>
    <script src="~/Content/WeUI/js/jquery-weui.js"></script>
    <script src="~/Content/WeUI/js/swiper.js"></script>








    @*<script src="~/Content/FoxUI/js/foxui.js"></script>*@

    @*苹果专用*@
    @*<meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="JoinInCRM">
    <link rel="apple-touch-icon" href="~/Content/WeUI/images/touch-icon-iphone.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/WeUI/images/touch-icon-ipad.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/Content/WeUI/images/touch-icon-iphone-retina.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/Content/WeUI/images/touch-icon-ipad-retina.png">*@
    

</head>
<body ontouchstart>
    <!--头部导航 开始-->
    <header class="bar bar-nav">
        <h1 class="title">@ViewBag.Title</h1>
        <a class="pull-left" onclick="javascript: { history.back(1)}"><i class="icon icon-back"></i></a>
        <a class="pull-right"><i class="icon"><img style="margin-top:-0.6rem;height:2.2rem;width:2.2rem;border-radius:2.2rem" src="@ViewBag.headimgurl" /></i></a>
    </header>
    <!--头部导航 结束-->
    <!--主体部分 开始-->
    <div class="content">
        <!--banner 开始-->
        <!--banner 结束-->

        <form id="newcustomerForm" method="post">
            <div class="weui-tab">
                <div class="weui-navbar">
                    <a class="weui-navbar__item weui-bar__item--on" href="#tab1">
                        资料
                    </a>
                    <a class="weui-navbar__item" href="#tab2">
                        车辆
                    </a>
                    <a class="weui-navbar__item" href="#tab3">
                        营业
                    </a>
                    <a class="weui-navbar__item" href="#tab4">
                        补充
                    </a>
                </div>

                <div class="weui-tab__bd">
                    <div id="tab1" class="weui-tab__bd-item weui-tab__bd-item--active">

                        <div class="weui-cell">
                            <div class="weui-cell__hd"><label class="weui-label">姓名：</label></div>
                            <div class="weui-cell__bd">
                                <input class="weui-input" type="text" ID='CustomerName' name='CustomerName' placeholder="请输入姓名">
                            </div>
                        </div>
                        <div class="weui-cell">
                            <div class="weui-cell__hd">
                                <label class="weui-label">电话：</label>
                            </div>
                            <div class="weui-cell__bd">
                                <input class="weui-input" type="text" id="Telphone" name='Telphone' placeholder="请输入电话">
                            </div>
                        </div>
                        <div class="weui-cell weui-cell_select weui-cell_select-after">
                            <div class="weui-cell__hd">
                                <label for="Source" class="weui-label">来源：</label>
                            </div>
                            <div class="weui-cell__bd">
                                <select class="weui-select" id="Source" name="Source">
                                    @foreach (var item in ViewBag.SourceList)
                                    {
                                        <option value="@item.SourceID">@item.SourceName</option>

                                    }
                                </select>
                            </div>
                        </div>

                        
                        <div class="weui-cell">
                            <div class="weui-cell__hd"><label class="weui-label">级别：</label></div>
                            <div class="weui-cell__bd">
                                <div class="checkbutton">
                                    <section class="plan">
                                        @foreach (var item in ViewBag.GradeList)
                                        {
                                            if (item.GradeID =="1")
                                            {
                                                <input type="radio" name="Grade" id="grade_@item.GradeID" checked value="H"><label class=" four" for="grade_@item.GradeID">@item.GradeName</label>
                                            }
                                            else
                                            {
                                                <input type="radio" name="Grade" id="grade_@item.GradeID" value="H"><label class=" four" for="grade_@item.GradeID">@item.GradeName</label>
                                            }


                                        }
                                       
                                    </section>
                                </div>


                            </div>
                        </div>
                        <div class="weui-cells__title">性别：</div>
                        <div class="weui-cells weui-cells_radio ">
                            <label class="weui-cell weui-check__label" for="male">
                                <div class="weui-cell__bd">
                                    <p>男</p>
                                </div>
                                <div class="weui-cell__ft">
                                    <input type="radio" class="weui-check" name="Sex" value="1" id="male">
                                    <span class="weui-icon-checked"></span>
                                </div>
                            </label>
                            <label class="weui-cell weui-check__label" for="female">
                                <div class="weui-cell__bd">
                                    <p>女</p>
                                </div>
                                <div class="weui-cell__ft">
                                    <input type="radio" name="Sex" class="weui-check" value="0" id="female" checked="checked">
                                    <span class="weui-icon-checked"></span>
                                </div>
                            </label>

                        </div>
                        <div class="weui-cells__title">备注：</div>
                        <div class="weui-cells weui-cells_form">
                            <div class="weui-cell">
                                <div class="weui-cell__bd">
                                    <textarea class="weui-textarea" id="Remark" name='Remark' placeholder="客户备注说明" rows="3"></textarea>
                                    <div class="weui-textarea-counter">不要超过50字</div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div id="tab2" class="weui-tab__bd-item">

                        <div class="weui-cell weui-cell_select weui-cell_select-after">
                            <div class="weui-cell__hd">
                                <label for="" class="weui-label">意向车型：</label>
                            </div>
                            <div class="weui-cell__bd">
                                <select class="weui-select" name="InterestedCar">
                                    <option value="-1">&nbsp;</option>
                                    @foreach (var item in ViewBag.CarList)
                                    {
                                        <option value="@item.CarID">@item.CarName</option>
                                    }

                                </select>
                            </div>
                        </div>

                        <div class="weui-cell weui-cell_select weui-cell_select-after">
                            <div class="weui-cell__hd">
                                <label for="" class="weui-label">车辆颜色：</label>
                            </div>
                            <div class="weui-cell__bd">
                                <select class="weui-select" name="InterestedColor">
                                    <option value="-1">&nbsp;</option>
                                    @foreach (var item in ViewBag.ColorList)
                                    {
                                        <option value="@item.ColorID">@item.ColorName</option>

                                    }

                                </select>
                            </div>
                        </div>
                        <div class="weui-cell">
                            <div class="weui-cell__hd"><label class="weui-label">竞&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;品：</label></div>
                            <div class="weui-cell__bd">
                                <input class="weui-input" type="text" ID='CompetingProduct' name='CompetingProduct' placeholder="可选择输入竞品">
                            </div>
                        </div>
                        <div class="weui-cell">
                            <div class="weui-cell__hd"><label class="weui-label">预&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;算：</label></div>
                            <div class="weui-cell__bd">
                                <input class="weui-input" type="text" ID='Budget' name='Budget' placeholder="可选择输入客户预算">
                            </div>
                        </div>
                        <div class="weui-cells__title">有无车牌：</div>
                        <div class="weui-cells weui-cells_radio ">
                            <label class="weui-cell weui-check__label" for="x11">
                                <div class="weui-cell__bd">
                                    <p>有车牌</p>
                                </div>
                                <div class="weui-cell__ft">
                                    <input type="radio" class="weui-check" name="LicensePlate" value="1" id="x11">
                                    <span class="weui-icon-checked"></span>
                                </div>
                            </label>
                            <label class="weui-cell weui-check__label" for="x12">
                                <div class="weui-cell__bd">
                                    <p>没车牌</p>
                                </div>
                                <div class="weui-cell__ft">
                                    <input type="radio" name="LicensePlate" class="weui-check" value="0" id="x12" checked="checked">
                                    <span class="weui-icon-checked"></span>
                                </div>
                            </label>

                        </div>
                        <div class="weui-cells weui-cells_form">
                            <div class="weui-cell">
                                <div class="weui-cell__hd"><label for="home-city" class="weui-label">上牌地区：</label></div>
                                <div class="weui-cell__bd">
                                    <input class="weui-input" id="home-city" name='CardArea' type="text">
                                </div>
                            </div>
                        </div>
                        <div class="weui-cells__title">备注：</div>
                        <div class="weui-cells weui-cells_form">
                            <div class="weui-cell">
                                <div class="weui-cell__bd">
                                    <textarea class="weui-textarea" id="VehicleRemark" name='VehicleRemark' placeholder="可选择输入车辆的其它备注说明" rows="3"></textarea>
                                    <div class="weui-textarea-counter">不要超过50字</div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div id="tab3" class="weui-tab__bd-item">

                    </div>
                    <div id="tab4" class="weui-tab__bd-item">
                        <h1>此页待开发，以后按需求扩展，增加要补充录入的内容。</h1>
                    </div>
                </div>
            </div>


            <div class="weui-btn-area">

                <input type="button" class="weui-btn weui-btn_primary" onclick="SaveCustomer()" id="submit" value="保存">

            </div>
        </form>

    </div>

    <script src="~/Content/WeUI/js/fastclick.js"></script>
    <script src="~/Content/WeUI/js/city-picker.js"></script>
  
    <script type="text/javascript">
        //banner
        $(".swiper-container").swiper({
            loop: true,
            autoplay: 3000
        });

        $(function () {
            FastClick.attach(document.body);
            $("#home-city").cityPicker({
                title: "请选择上牌地区",
                showDistrict: false,
            });
        });
        function SaveCustomer() {
            var formParam = $("#newcustomerForm").serialize();
            $.showLoading("正在处理数据...");


            $.ajax({
                type: "POST",
                dataType: "json",
                url:"@Url.Action("Create", "Customer")",
                data: formParam,
                cache:false,
                success: function (data) {

                    //？？？？
                    $.hideLoading();

                    var strresult = data;
                    if (strresult == "1") {
                        document.getElementById("CustomerName").value = "";
                        document.getElementById("Telphone").value = "";
                        document.getElementById("Remark").value = "";
                        document.getElementById("VehicleRemark").value = "";
                        document.getElementById("Budget").value = "";
                        $("input[name=CustomerName]").focus();
                        $.toast("保存成功！", function () {
                            console.log('close');
                        });


                    } else {
                        $.toptip('操作失败', 'error');
                    }

                },
                error: function (data) {
                    $.hideLoading();
                   // $.toast("保存失败"+data.responseText, "forbidden");
                    $.toptip('操作失败：'+data.responseText, 'error')
                }

            });


        }
    </script>
    <!--底部固定导航 开始-->
    <div class="weui-tabbar">
        <a href="@Url.Action("Index","Home")" class="weui-tabbar__item ">
            <div class="weui-tabbar__icon"> <i class="icon icon-home"></i> </div>
            <p class="weui-tabbar__label">首 页</p>
        </a>
        <a href="@Url.Action("Remind","Home")" class="weui-tabbar__item ">
            <div class="weui-tabbar__icon"> <i class="icon icon-renwuguanli"></i> </div>
            <p class="weui-tabbar__label">提醒</p>
        </a>
        <a href="@Url.Action("Circle","Home")" class="weui-tabbar__item ">
            <div class="weui-tabbar__icon"> <i class="icon icon-process"></i> </div>
            <p class="weui-tabbar__label">工作圈</p>
        </a>
        <a href="@Url.Action("WorkData","Home")" class="weui-tabbar__item ">
            <div class="weui-tabbar__icon"> <i class="icon icon-training"></i> </div>
            <p class="weui-tabbar__label">数据</p>
        </a>
        <a href="@Url.Action("Setting","Home")" class="weui-tabbar__item ">
            <div class="weui-tabbar__icon"> <i class="icon icon-set"></i> </div>
            <p class="weui-tabbar__label">设置</p>
        </a>
    </div>
    <!--底部固定导航 结束-->
</body>
</html>